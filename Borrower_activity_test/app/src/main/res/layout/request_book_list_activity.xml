<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="533dp"
        android:gravity="center"
        android:orientation="vertical">

        <ListView
            android:id="@+id/request_book_list_view"
            android:layout_width="wrap_content"
            android:layout_height="384dp"
            android:text="Borrower"
            android:listSelector="#999999">

        </ListView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/just_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Just Show one status" />

            <Switch
                android:id="@+id/just_show_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/just_show_one_status"
            android:layout_width="202dp"
            android:layout_height="57dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="Just Show one status" />

        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Back"/>

    </LinearLayout>

</RelativeLayout>